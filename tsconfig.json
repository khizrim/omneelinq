{
  "compilerOptions": {
    "strict": true,

    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "es2022",
    "moduleResolution": "node",

    "target": "es5",
    "jsx": "react",

    "allowJs": true,
    "checkJs": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
